<div id="flash">
  <% if flash[:notice] %>
    <div class="flash flash-notice" style="color: green; padding: 10px; margin-bottom: 15px; border: 1px solid #d6e9c6; border-radius: 4px; background-color: #dff0d8;">
      <%= flash[:notice] %>
    </div>
  <% end %>
  
  <% if flash[:alert] %>
    <div class="flash flash-alert" style="color: #a94442; padding: 10px; margin-bottom: 15px; border: 1px solid #ebccd1; border-radius: 4px; background-color: #f2dede;">
      <%= flash[:alert] %>
    </div>
  <% end %>
</div>